ENTERING GAME
	IF TRUE
	THEN
		#SET FLAG 3 = 1 ##
		#SET FLAG 8 = 1 ##
		#SET FLAG 9 = 1 ##
		#SET FLAG 10 = 1 ##
		#SET FLAG 11 = 1 ##
		#SET FLAG 2 = 4 ##
		#SET FLAG 14 = 1 ##
		#ENABLE_KILL_SLOWLY ###
		
		DISABLE_KILL_SLOWLY
		DISABLE_TYPE_6
	END
END

ENTERING ANY
	IF FLAG 2 = 4
	IF FLAG 4 = 0
	IF FLAG 8 = 0
	THEN
		SET FLAG 8 = 1
		#TEXT ___GO_SEE_TWITCH_THE_WITCH____
		TEXT __VE_A_VER_A_LA_BRUJA_MARUJA__
	END
END

PLAYER_GETS_COIN
	#IF FLAG 1 = 10
	#THEN
	#	INC LIFE 5
	#END

	IF TRUE
	THEN
		INC LIFE 1
	END
	
	IF FLAG 1 = 20
	THEN
		#INC LIFE 5
		SOUND 8
		DISABLE_TYPE_6
		HIDE_COINS
		REDRAW
		#TEXT _______TRAP_DEACTIVATED_______
		TEXT ______TRAMPA_DESACTIVADA______
	END
END

# Pantalla inicial

ENTERING SCREEN 7
	IF FLAG 14 = 0
	THEN
		#TEXT ___I_FORGOT_HER_DEATHDAY_!!___
		TEXT ___OLVIDE_SU_CUMPLEMUERTES!___
		SET TILE (4, 4) = 27
		SET_FIRE_ZONE 80, 24, 91, 71
		SET FLAG 6 = 0
	END
	
	IF TRUE
	THEN
		SET TILE (2, 3) = 30
		SET TILE (2, 4) = 31
	END
END

PRESS_FIRE AT SCREEN 7
	IF FLAG 7 = 0
	IF FLAG 6 = 0
	IF FLAG 14 = 0
	THEN
		SET FLAG 6 = 1
		#TEXT _____I_WANT_MY_PRESENT_!!_____
		TEXT ____QUIERO_MI_PUTO_REGALO!____
		SHOW
		SOUND 10
	END
	
	IF FLAG 7 = 1
	IF FLAG 14 = 0
	THEN
		#TEXT ______THANKSIES_DADDY!________
		TEXT ________GRACIAS_PAPI!_________
		SHOW
		SOUND 11
		SOUND 7
		SET TILE (4, 4) = 0
		SET_FIRE_ZONE 24, 48, 48, 79
		SET FLAG 14 = 1
	END IF
	
	IF FLAG 14 = 1
	IF PLAYER_TOUCHES 2, 4
	THEN
		SOUND 8
		WIN GAME
	END IF
END

