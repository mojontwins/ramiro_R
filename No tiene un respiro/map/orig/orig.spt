# Hechizo postizo y encantamiento del pimiento

PRESS_FIRE AT SCREEN 8
	IF FLAG 3 = 0
	IF PLAYER_TOUCHES 6,5
	THEN
		SET FLAG 3 = 1
		ENABLE_KILL_SLOWLY
		EXTERN 1
		SOUND 6
		EXTERN 2
		REDRAW
		SET TILE (8, 5) = 26
		SET TILE (7, 5) = 29
	END
	
	IF FLAG 2 = 4
	IF FLAG 4 = 0
	THEN
		# Encantamiento del pimiento
		SET FLAG 4 = 1
		EXTERN 3
		REDRAW
		SET TILE (8, 5) = 26
		SET TILE (7, 5) = 29
	END
END

